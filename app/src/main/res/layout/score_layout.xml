<?xml version="1.0" encoding="utf-8"?>

<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/m_8">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvScore"
            style="@style/List_Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/m_8"
            android:text="@string/na"
            android:textSize="@dimen/fs_largest"
            app:layout_constraintBottom_toTopOf="@id/tvExamName"
            app:layout_constraintEnd_toEndOf="@id/tvExamName"
            app:layout_constraintStart_toStartOf="@id/tvExamName"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="366" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvExamName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent"
            android:layout_marginTop="@dimen/m_8"
            android:padding="@dimen/m_8"
            android:textColor="@color/ic_tint_color"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvScore"
            tools:text="AVG.Reading" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>